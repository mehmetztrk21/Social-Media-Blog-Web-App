@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bloglar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card mb-3">
                            <a href="single.html">
                                <img src="~/tema/images/@item.ThumbnailImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @item.date.ToString("dd-MMM-yyyy").Split().GetValue(0)
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.category.name
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="single.html">@item.title</a>
                                </h5>
                                <p class="card-text mb-3">@item.content.Substring(0,item.content.Substring(0,140).LastIndexOf(" ")) ...</p>  <!--0 dan 140. karaktere kadar olanları yaz fakat son kelimeyi bölme son kelimeden sonraki yere kadar devam et.-->
                                <a href="/blog/details/@item.Id" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</section>