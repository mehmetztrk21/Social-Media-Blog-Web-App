@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 5 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/tema/images/@item.image" class="mr-2" alt="image"> 
                                    </td>
                                    <td>@item.title</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.category.name</label>
                                    </td>
                                    <td> @item.date.ToString("dd-MMM-yyyy").Split().GetValue(0)</td>
                                    <td>
                                        <a href="/Blog/Details/@item.Id" class="btn btn-dark btn-sm">Detaylar</a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
