@model List<Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count != 0)
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/tema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.name</h5>
                    <p>
                        @item.content
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-warning">Bu bloğa ait bir yorum bulunamadı. İlk yorumu yazın!</p>
    }


</div>
