@model List<Message>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="~/tema/images/@item.SenderUser.image" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.name sana bir mesaj gönderdi.</h6>
                <p class="text-gray mb-0">@item.Date.ToShortDateString() </p>
            </div>
        </a>
    }


    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">1 Yeni Mesaj</h6>
</div>
