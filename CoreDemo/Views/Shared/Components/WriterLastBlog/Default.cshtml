@model IEnumerable<Blog>

<div class="tech-btm">
    <h4>Yazarın Diğer Yazıları</h4>

    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/blog/details/@item.Id">
                    <img src="~/tema/images/@item.image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="single.html">@item.title </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.date.ToString("dd-MMM-yyyy").Split().GetValue(0)
                    </span>
                </div>
            </div>

        </div>
    }


</div>