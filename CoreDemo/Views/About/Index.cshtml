@model List<About>

@{
    Layout = "UserLayout";
}

    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Hakkımızda</h3>
            <div class="row inner-sec">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">

                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="~/tema/images/b5.jpg" class="img-fluid" alt="">
                            </a>
                        </div>
                        <h3>
                            Biz Kimiz?
                        </h3>
                        <p>
                           @foreach (var item in Model)
                           {
                               @item.details1
                           }
                        </p>
                    </div>
                </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/tema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        <h4>Mail Bültenine abone olun.</h4>

                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                        @await Html.PartialAsync("SocialMediaAbout.cshtml")
                        <div class="tech-btm">
                            <h4>Son Postlar</h4>

                            @await Component.InvokeAsync("WriterLastBlog", new { id = 2, valid_blog_id = 0 })

                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>